<section class="px-3 py-5 p-md-5">
  <div class="container single-col-max-width">
    <p>
      <%= t(:welcome_admin, email: Current.session.user.email_address) %>
    </p>

    <div class="mt-3">
      <a href="<%= new_admin_post_path %>" data-turbo-action="advance">
        <button type="button" class="btn btn-primary"><%= t(:create_a_post) %></button>
      </a>
    </div>
    <br>
    <%= link_to "Resumes", admin_resumes_path, "data-turbo-action": "advance" %>
    <br>
    <br>
    <%= link_to "Categories", admin_categories_path, "data-turbo-action": "advance" %>
    <br>
    <br>
    <%= link_to "Social media accounts", admin_social_media_accounts_path, "data-turbo-action": "advance" %>
    <br>
    <br>
    <%= link_to "Email Subscribers", admin_email_subscribers_path, "data-turbo-action": "advance" %>
    <br>
    <br>
    <%= link_to "Jobs", jobs_path, "data-turbo": false, target: "_blank" %>
    <br>
    <br>

    <div data-controller="toggle-settings">
      <button data-toggle-settings-target="button"
              data-action="click->toggle-settings#toggle"
              class="btn btn-outline-secondary my-3">
        Show Settings
      </button>

      <div data-toggle-settings-target="content" class="d-none" id="advanced-settings">
        <%= link_to t(:website_display), "https://github.com/PersonalBranding/personal-brand-website-builder/tree/main/docs/setup_website.md", "data-turbo": false, target: "_blank" %>
        <br>
        <br>
        <%= link_to "Manage Locales", admin_locales_path, "data-turbo-action": "advance" %>
        <br>
        <br>
        <%= link_to "Manage Themes", admin_themes_path, "data-turbo-action": "advance" %> <i class="fas fa-palette"></i>
        <br>
        <br>
        <%= link_to "Settings", admin_settings_path, "data-turbo-action": "advance" %>
        <br>
        <br>
        <%= link_to "GitHub App settings", admin_github_app_settings_path, "data-turbo-action": "advance" %>
      </div>
    </div>

    <%= button_to t(:log_out), session_path, method: :delete, class: "btn btn-primary my-3", "data-turbo": false if authenticated? %>
  </div>
</section>
