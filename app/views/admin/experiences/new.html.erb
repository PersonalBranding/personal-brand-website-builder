<% content_for :title, "Add experience" %>

<section class="px-3 py-5 p-md-5">
  <div class="container single-col-max-width">
    <h5 class="mb-3">Add experience</h5>

    <%= form_with(model: [:admin, @experience], data: { "turbo-action": "advance" }) do |form| %>
      <% if @experience.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(@experience.errors.count, "error") %> prohibited this experience from being saved:</h2>

          <ul>
          <% @experience.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="my-2">
        <%= form.label :company_name, class: "required" %>
        <%= form.text_field :company_name, class: "form-control" %>
      </div>

      <div class="my-2">
        <%= form.label :title, class: "required" %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="my-2">
        <%= form.label :description, class: "required" %>
        <%= form.text_area :description, cols: 90, rows: 8 %>
      </div>

      <div class="my-2">
        <%= form.label :start_year, class: "required" %>
        <%= form.text_field :start_year, class: "form-control" %>
      </div>

      <div class="my-2">
        <%= form.label :start_month %>
        <%= form.text_field :start_month, class: "form-control" %>
      </div>

      <div class="my-2">
        <%= form.label :end_year %>
        <%= form.text_field :end_year, class: "form-control" %>
      </div>

      <div class="my-2">
        <%= form.label :end_month %>
        <%= form.text_field :end_month, class: "form-control" %>
      </div>

      <div class="mt-4">
        <%= form.submit nil, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</section>
