<% content_for :title, "Professional skills" %>

<section class="px-3 py-5 p-md-5">
  <div class="container single-col-max-width">
    <%= tag.div(flash[:notice], class: "text-success mb-3") if flash[:notice] %>

    <div class="d-flex justify-content-between align-items-center">
      <h5>Professional skills</h5>
      <a href="<%= new_admin_professional_skill_path %>" data-turbo-action="advance">
        <button type="button" class="btn btn-primary btn-sm">Add professional skill</button>
      </a>
    </div>

    <table class="table table-striped my-4">
      <thead>
        <tr>
          <th>#</th>
          <th>Skill Name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
      <% @professional_skills.each do |skill| %>
        <tr>
          <th><%= skill.id %></th>
          <td><%= skill.name %></td>
          <td>
            <div class="d-flex gap-2">
              <a href="<%= edit_admin_professional_skill_path(skill) %>" data-turbo-action="advance">
                <button type="button" class="btn btn-sm btn-outline-primary">Edit</button>
              </a>
              <%= button_to "Delete",
                            admin_professional_skill_path(skill),
                            method: :delete,
                            class: "btn btn-danger btn-sm",
                            form: {
                              data: {
                                turbo_confirm: "Are you sure you want to delete this professional skill?",
                                turbo_confirm_type: "danger"
                              }
                            } %>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</section>
